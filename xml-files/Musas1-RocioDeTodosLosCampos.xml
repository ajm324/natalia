    <verse>
        <line><assoc type="water" image="dew">Rocío</assoc> de todos <assoc type="earth" image="field">los campos</assoc></line>
        <line><assoc type="water" image="dew">Rocío de sal</assoc> en <assoc type="water" image="sea">el mar</assoc></line>
